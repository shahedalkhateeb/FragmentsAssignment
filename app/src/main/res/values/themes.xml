<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- الثيم الأساسي بدون ActionBar -->
    <style name="Theme.FragmentsAssignment.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- لون الخلفية الأساسي للتطبيق -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- لون الخلفية للشاشات -->
        <item name="android:colorBackground">@color/white</item>

        <!-- لون الـ Toolbar والنصوص -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <!-- لون الأيقونات في الـ Toolbar -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>

        <!-- لون الـ Navigation Drawer -->
        <item name="navigationViewStyle">@style/Widget.MaterialComponents.NavigationView</item>

        <!-- لون الـ BottomNavigation -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>

</resources>
